doctype 5
html
    head
        meta charset='utf-8'
        meta property='og:image' content='http://valenca.sirva.me/assets/layout/logo2.png'
        title = page_title
        = csrf_meta_tag
        = favicon_link_tag
        = stylesheet_link_tag 'fonts/open_sans'
        = stylesheet_link_tag 'application'
        /[if lt IE 9]
            = javascript_include_tag 'html5'
    body
        div.main-container
            header.main
                div.container
                    h1.logo = link_to image_tag('layout/logo.png', alt: page_title), root_path, title: page_title
                    nav
                        ul
                            li = link_to ENV['SMTP_ADDRESS'], 'mailto:fale-com@sirva.me', title: 'Envie-nos um e-mail. Ficaremos felizes!'
            section.body
                == yield
            footer
                div.container
                    = link_to image_tag('layout/logo1.png', alt: page_title), root_path, title: page_title, class: 'logo'
                    = link_to 'who', 'http://bazzarella.com', target: '_blank', title: 'Felipe Bazzarella', class: 'who'
        == render partial: './metrics'
        = javascript_include_tag 'application'