header.company {
	background: url('<%= image_path('layout/background_header_company.png') %>') repeat-x;
  height: 101px;
}

header.company .back-to-catalog {
  margin: 18px 0 10px;
}

header.company h2 {
  width: 600px;
  height: 39px;
  font-size: 2.2em;
  overflow: hidden;
}

header.company .addthis {
  top: 18px;
}

aside {
	float: right;
  background: #F9F9F9 url('<%= image_path('layout/background_body.png') %>');
  -webkit-border-radius: 4px;
     -moz-border-radius: 4px;
          border-radius: 4px;
  padding: 15px;
  width: 220px;
  -webkit-box-shadow: inset 0 0 10px rgba(0,0,0,.5);
     -moz-box-shadow: inset 0 0 10px rgba(0,0,0,.5);
          box-shadow: inset 0 0 10px rgba(0,0,0,.5);
}

dl {
  margin: 0;
}

dt {
  margin-top: 20px;
  font-size: 1.1em;
  font-weight: bold;
}

dd {
  margin: 2px 0 0 5px;
}

.company section {
  width: 690px;
}

.company article {
  margin-bottom: 30px;
}

.company article:last-child {
  margin-bottom: 0;
}

.company article h3 {
  font-size: 1.8em;
}

.company article p {
  margin: 10px 0;
  line-height: 1.5em;
  text-indent: 2em;
}

.company article ul {
  list-style: none;
}

.company article ul:after {
  content: '.';
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
  zoom: 1;
}

.cover {
  padding: 2px;
  width: 684px;
  height: 224px;
}

.images li {
  float: left;
}

.cover,
.images li {
  background-color: #FFF;
  border: 1px solid #999;
  overflow: hidden;
}

.cover:hover,
.images li:hover {
  border-color: #000;
}

.gallery .images {
  margin: 10px -5px;
}

.gallery .images li {
  margin: 5px;
  padding: 2px;
  width: 124px;
  height: 114px;
}

.products .price {
  float: right;
}

.products h4 {
  font-size: 1.2em;
}

.list {
  margin: 10px 0;
}

.list > li {
  margin: 10px 0 20px;
  border-bottom: 1px dotted #999;
}

.list > li:last-child {
  margin-bottom: 0;
  border-bottom: none;
}

.list > li:last-child .images:last-child {
  margin-bottom: 0;
}

.list .images {
  margin: 10px -2px;
}

.list .images li {
  margin: 2px;
  padding: 1px;
  width: 61px;
  height: 57px;
}